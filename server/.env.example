# === Debug Mode ===
# Enables: Echo request logging, GORM SQL logging, Swagger UI (/swagger/)
DEBUG=true

# === Core ===
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
DB_DSN=bonds.db
DB_DRIVER=sqlite
JWT_SECRET=change-me-in-production
APP_NAME=Bonds
APP_ENV=development
APP_URL=http://localhost:8080

# === JWT Token Expiry ===
# JWT_EXPIRY_HRS=24
# JWT_REFRESH_HRS=168

# === SMTP (email notifications & invitations) ===
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@example.com

# === File Storage ===
# STORAGE_UPLOAD_DIR=uploads
# STORAGE_MAX_SIZE=10485760

# === Full-text Search (Bleve) ===
# BLEVE_INDEX_PATH=data/bonds.bleve

# === Telegram Notifications ===
# TELEGRAM_BOT_TOKEN=

# === OAuth Login ===
# OAUTH_GITHUB_KEY=
# OAUTH_GITHUB_SECRET=
# OAUTH_GOOGLE_KEY=
# OAUTH_GOOGLE_SECRET=

# === Geocoding ===
# GEOCODING_PROVIDER=nominatim
# GEOCODING_API_KEY=

# === WebAuthn / FIDO2 ===
# WEBAUTHN_RP_ID=bonds.example.com
# WEBAUTHN_RP_DISPLAY_NAME=Bonds
# WEBAUTHN_RP_ORIGINS=https://bonds.example.com

# === Announcement Banner ===
# ANNOUNCEMENT=This is a demo server. Data may be reset at any time.

